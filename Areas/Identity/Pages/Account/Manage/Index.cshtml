<style>
    .btn-salvar:hover {
        background-color: #6A45A5;
        color: white;
        text-decoration: none;
    }



    .sobre-nos-title {
        color: #6A45A5;
    }

    .container-config {
        margin-top: 50px;
        margin-bottom: 80px;
    }

    .form-control {
        border: 1px solid #F20201 !important;
        border-radius: 10px;
    }

    .btn-salvar {
