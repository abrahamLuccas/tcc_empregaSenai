@using Microsoft.AspNetCore.Identity
@using EmpregaSENAI.Areas.Identity.Data

@inject SignInManager<EmpregaSENAI.Models.Users> SignInManager
@inject UserManager<EmpregaSENAI.Models.Users> UserManager

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - EmpregaSENAI</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@1,800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <link href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmpregaSENAI.styles.css" asp-append-version="true" />
</head>
<body>


    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="logo navbar-brand fw-bold" href="#">EmpregaSENAI!</a>
            <buttom class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav" aria-expanded="true">
                <span><i class="bi bi-list"></i></span>
            </buttom>
            <div class="collapse navbar-collapse show" id="main_nav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item active fw-bold"> <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home </a> </li>
                    <li class="nav-item active"><a class="nav-link text-dark" asp-controller="Vagas" asp-action="Index">Ver vagas</a></li>
                    <li class="nav-item active"><a class="nav-link text-dark" asp-controller="Curriculos" asp-action="Create">Criar CV</a></li>

                    <li class="nav-item dropdown">
                        <a class="nav-link  dropdown-toggle active text-dark" href="#" data-toggle="dropdown">
                            Blog
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item text-dark" href="#"> Artigos para Alunos   </a></li>
                            <li><a class="dropdown-item text-dark" href="#"> Artigos para empresas </a></li>
                        </ul>
                    </li>
                    <li class="nav-item active"><a class="nav-link text-dark" href="#"> Contato </a></li>
                </ul>
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class=" col-md-3 d-flex justify-content-end py-3">

                        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Bem Vindo @UserManager.GetUserName(User)!</a>

                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Sair</button>
                        </form>

                    </div>
                }
                else
                {
                    <li class="entrar btn btn-login fw-bold text-dark"><a class="entrar" asp-area="Identity" style="text-decoration:none; color:white;" asp-page="/Account/Login">Entrar </a></li>

                }
            </div> <!-- navbar-collapse.// -->
        </div>
        @*<partial name="_LoginPartial" />*@
    </nav>





    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
