@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

@*<h3>@ViewData["Title"]</h3>*@
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="sobre-nos-title">
        <h2 class="mb-3 fw-bold">Alterar configurações da conta</h2>
        <h4 class="perfil-text mb-3 fw-bold">Senha</h4>
    </div>
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Input.OldPassword" class="form-label"> Senha atual</label>
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.NewPassword" class="form-label">Nova senha</label>
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar nova senha</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-salvar btn fw-bold">Alterar senha</button>
            

        </form>
    </div>
</div>



<style>
    .nav-link {
        color: #F20201 !important;
        font-weight: 700;
    }

    #profile {
        background-color:transparent !important;
        color: #F20201 !important;
    }

    #change-password {
        background-color: #F20201 !important;
        color: white !important;
    }

    .btn-salvar:hover {
        background-color: #6A45A5;
        color: white;
        text-decoration: none;
    }



    .sobre-nos-title {
        color: #6A45A5;
    }

    .container-config {
        margin-top: 50px;
        margin-bottom: 80px;
    }

    .form-control {
        border: 1px solid #F20201 !important;
        border-radius: 10px;
    }

    .btn-salvar {
        background-color: #F20201;
        color: white;
        border-radius: 10px;
    }

    .perfil-text {
        color: #F20201;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
